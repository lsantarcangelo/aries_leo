<!-- Head -->
<%- include('../partials/head')%>
    <link rel="stylesheet" href="../../css/styles.css">
    <link rel="stylesheet" href="../../css/header.css">
    <link rel="stylesheet" href="../../css/footer.css">
    <link rel="stylesheet" href="../../css/productDetail.css">
</head>

<body>
<!-- Inicio de Cabecera del Sitio -->
<%- include('../partials/header')%>
    <main>
        <section class="container_detalle">
            <div class="path">
                <h6>Home / Categoria / Producto</h6>
            </div>
                
            <div class="detalle_producto">
                <div class="foto_detalle">
                    <img src="/images/<%= product.product_img %> " alt="" class="fotodetalle">
                </div>
            

                <div class="texto_detalle">

                    <h1> <%= product.name %> </h1>

                    <h2> <%= product.price %>  </h2>

                    <p> <%= product.description %>  </p>

                    <div class="lista-detalle">
                        <h3>CATEGORIA</h3>
                        <p><%= product.category.name %> </p>
                    </div>

                    <div class="lista-detalle">
                        <h3>COLOR</h3>
                        <p><%= product.color.name %> </p>
                    </div>

                    <div class= "lista-detalle">
                        <h3>TALLE</h3>
                        <p><%= product.size.name %> </p>
                    </div>


                    <div class="botoncompra">
                        <button type="submit" class="submit">Agregar al carrito</button>
                        <!-- <a href="">
                            Editar
                        </a> -->
                        <form action="/products/edit/<%= product.id %>">
                            <button type="submit" class="button-delete">Editar</button>
                        </form>
                        <form action="/products/delete/<%= product.id%>" method="POST">
                            <button type="submit" class="button-delete">Eliminar</button>
                        </form>
                    </div>
                        
                </div>             
            </div> 
        </section>
 
    </main>
    

    <%- include('../partials/footer')%>

</body>
</html>